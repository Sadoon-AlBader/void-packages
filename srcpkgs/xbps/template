# Template file for 'xbps'
pkgname=xbps
version=0.53
revision=10
bootstrap=yes
build_style=configure
short_desc="The XBPS package system utilities"
maintainer="Juan RP <xtraeme@voidlinux.org>"
homepage="https://github.com/void-linux/xbps"
license="BSD-2-Clause"
distfiles="https://github.com/void-linux/xbps/archive/${version}.tar.gz"
checksum=360b3149141fec46dd6da9019605bcee48ee4d29bffe5aa47a9fd5fa68ccd5f4

hostmakedepends="pkg-config"
checkdepends="kyua"
makedepends="zlib-devel libressl-devel libarchive-devel"
depends="ca-certificates xbps-triggers"

make_dirs="/etc/xbps.d 0755 root root"

if [ "$CHROOT_READY" ]; then
	makedepends+=" atf-devel"
	xbps-tests_package() {
		short_desc+=" - Kyua testsuite"
		pkg_install() {
			vmove usr/tests
		}
	}

fi

do_configure() {
	HAVE_VASPRINTF=1 ./configure --prefix=/usr --sysconfdir=/etc --enable-debug \
		--bindir=/usr/bin ${CHROOT_READY:+--enable-tests}
}
post_install() {
	case "$XBPS_TARGET_MACHINE" in
	aarch64*) # XXX different repo location
		echo "repository=https://alpha.de.repo.voidlinux.org/current/aarch64" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	ppc64le)
		echo "repository=https://auto.void-power.octaforge.org/current" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	ppc64le-musl)
		echo "repository=https://auto.void-power.octaforge.org/current/musl" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	ppc64)
		echo "repository=https://auto.void-power.octaforge.org/current/be" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	ppc64-musl)
		echo "repository=https://auto.void-power.octaforge.org/current/be/musl" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	ppc)
		echo "repository=https://auto.void-power.octaforge.org/current/ppc" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	ppc-musl)
		echo "repository=https://auto.void-power.octaforge.org/current/ppc/musl" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	*-musl) # XXX different repo location
		echo "repository=https://alpha.de.repo.voidlinux.org/current/musl" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	*)
		echo "repository=https://alpha.de.repo.voidlinux.org/current" > \
			${DESTDIR}/usr/share/xbps.d/00-repository-main.conf
		;;
	esac
	vinstall "${FILESDIR}/32:32:d3:b3:72:0b:df:18:81:d0:c7:ca:d5:7d:f3:95.plist" 644 var/db/xbps/keys
	vlicense COPYING
	vlicense COPYING.3RDPARTY
}

libxbps_package() {
	short_desc+=" - runtime library"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}
libxbps-devel_package() {
	short_desc+=" - runtime library (development files)"
	depends="zlib-devel libarchive-devel libxbps>=${version}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
